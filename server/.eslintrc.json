{
  "extends": [
    "airbnb-base",
    "plugin:security/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["security", "prettier"],
  "env": {
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "trailingComma": "all"
      }
    ],
    "import/prefer-default-export": 0,
    "no-unused-vars": "warn",
    "import/no-dynamic-require": 0
  }
}
